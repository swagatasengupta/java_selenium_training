<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="MyStore WebUI TestSuite" parallel="tests"
	thread-count="2">
	<listeners>
		<listener class-name="com.lib.util.listeners.TestListener"></listener>
		<listener class-name="com.lib.util.listeners.AnnotationTransformer"></listener>
	</listeners>
	<test name="Smoke-nonUI">
		<parameter name="testType" value="nonUI"></parameter>
		<classes>
			<class name="com.test.mystore.ui_tests.Test1"></class>
			<class name="com.test.mystore.ui_tests.Test2"></class>
		</classes>
	</test>
	<test name="Smoke-Chrome">
		<parameter name="testType" value="UIWeb"></parameter>
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.test.mystore.ui_tests.Login_Logout"></class>
			<class name="com.test.mystore.ui_tests.CreateAddress"></class>
			<class name="com.test.mystore.ui_tests.MyAcctLinkNavigations"></class>
		</classes>
	</test>

	<test name="Smoke-Mozilla">
		<parameter name="testType" value="UIWeb"></parameter>
		<parameter name="browser" value="mozilla"></parameter>
		<classes>
			<class name="com.test.mystore.ui_tests.Login_Logout"></class>
			<class name="com.test.mystore.ui_tests.CreateAddress"></class>
			<class name="com.test.mystore.ui_tests.MyAcctLinkNavigations"></class>
		</classes>
	</test>
</suite>